    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Module - GitHub",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/globality/cli/github.py",
            // "internalConsoleOptions": "openOnSessionStart",
            // "pythonPath": "${env:VIRTUALENVWRAPPER_PYTHON}",
            "console": "integratedTerminal",
            // "stopOnEntry": true
        },
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        }
    ]
}
